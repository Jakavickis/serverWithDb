{{#with model}}
<div id="title-container">
    <h1>
        {{title}}
    </h1>
</div>
<hr />
<main>
    <form id="note-input" method="post">
        <input type="tegetxt" name="note" placeholder="Enter a new note here!" />
        <button type="submit">Save</button>
    </form>
    <section>
        {{#each notes}}
        <div class="oneNoteLine">
            <span class="note-text">{{this.note}}</span>
            <div class="oneNoteLineButtons buttons">
                <button class="standard" onclick="editNote({{this.notes_id}}, this)">Edit</button>
                <button class="standard" onclick="deleteNote({{this.notes_id}})">Delete</button>
                <button class="edit hidden" onclick="saveEdit({{this.notes_id}}, this)">save</button>
                <button class="edit hidden" onclick="undoEdit({{this.notes_id}}, this)">cancel</button>
            </div>
        </div>
        {{/each}}
    </section>
</main>
{{/with}}